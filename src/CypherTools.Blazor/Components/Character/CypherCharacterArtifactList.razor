<h3>Artifacts</h3>
<div>
    @foreach (var artifact in characterArtifacts)
    {
        <CypherTools.Blazor.Components.Character.CypherCharacterArtifact Artifact="artifact" removeCallback="Remove"></CypherTools.Blazor.Components.Character.CypherCharacterArtifact>
    }
    <button @onclick="AddArtifact">Add Artifact</button>
</div>
@code {
    [Parameter]
    public List<Models.CharacterArtifact> characterArtifacts { get; set; }

    private void Remove(Models.CharacterArtifact artifactToRemove)
    {
        characterArtifacts.Remove(artifactToRemove);
    }
    private void AddArtifact()
    {
        characterArtifacts.Add(new Models.CharacterArtifact() { Name = "New Artifact" });
    }

}
